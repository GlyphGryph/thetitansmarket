<% if user_signed_in? %>
  <div class="world-list list">
    <% @worlds.each do |world| %>
      <div class="entry">
        <%= world.id %>: <%= world.name%> (<%= world.characters.count %>)
        <% unless (@user_worlds.include? world) %>
          <%= link_to "Join World", join_world_path(:id => world.id) %>  
        <% end %>
      </div>
    <% end %>
    <div class="world-new">
      <%= link_to "Create World", new_world_path %>
    </div>
  </div>
  <hr />
  <div class="character-list list">
    <% @characters.each do |character| %>
      <% if character.world %>
        <div class="entry">
          <%= character.name %> (World <%= character.world.id %>, <%= character.world.name %>) 
          <% if !character.ready? %>
            <b>!Awaiting Actions!</b>
          <% end %>
          <% if character.unread_proposals.count > 0 %>
            <b>(Unread proposals: <%= character.unread_proposals.count %>)</b>
          <% end %>
          <%= link_to "Take Control", character_overview_path(:id => character) -%>
        </div> 
      <% else %>
        <div class="entry deceased">
          <%= character.name %> [DECEASED] <%= link_to "View", show_character_path(:id => character) -%>
        </div> 
      <% end %>
    <% end %>
  </div>


<% else %>
  Welcome! Please log in or register!
<% end %>
