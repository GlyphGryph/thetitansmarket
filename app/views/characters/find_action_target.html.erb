<div id="player-menu">
  <%= link_to "Return to World List", root_path %> - 
  <%= link_to "Back to Overview", character_overview_path(:id=>@character.id) %>
</div>

<div id="choose-target-prompt">
  <%= @action.target_prompt %>
</div>
<div id="choose-target-options">
  <% @targets.each do |key, data| %>
    <div class="info-block">
      <div class="info-block-head"><%= data.label %></div>
      <div class="info-block-body">
        <% data.values.each do |target| %>
          <div class="choosable-element element">
            <%= link_to target.get.name, add_action_with_target_path(:id => @character.id, :target_type => key, :target_id => target.id) %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
